package com {		import flash.display.MovieClip;	import flash.events.MouseEvent;		import com.masterGame;	import flash.events.MouseEvent;		public class touchPad extends MovieClip 	{		public static var instance;				public function touchPad(initWidth:Number, initHeight:Number) 		{			x = 0;			y = 0;						width = initWidth;			height = initHeight;						instance = this;			addEventListener(MouseEvent.MOUSE_DOWN, onClick);		}				public function onClick(e:MouseEvent)		{			masterGame.instance.onScreenClick(e.stageX, e.stageY);		}	}}